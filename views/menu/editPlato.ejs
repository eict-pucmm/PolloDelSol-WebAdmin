<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Editar plato del dia</h4>
                  <% if (data == '') { %>
                    <p id="result-message" style="color :red">No hay platos registrados</p>
                  <% } %>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Dia</th>
                          <th>Arroz</th>
                          <th>Carne</th>
                          <th>Guarnici√≥n</th>
                          <th>Ensalada</th>
                        </tr>
                      </thead>
                      <tbody>
                       <% if (data !== '') { %>
                         <% data.plato.forEach(function (plato) { %>
                              <tr>
                                <td>
                                  <%= plato.dia %>
                                </td>
                                <td> 
                                    <select class="form-control col-sm-10" id="arroz-<%= plato.id_plato_del_dia %>" name="arroz-<%= plato.id_plato_del_dia %>">
                                        <% data.arroz.forEach(function (arroz) {%>
                                            <option value="<% arroz.id_item %>" <% if (plato.id_arroz == arroz.id_item ) { %>selected<% } %> > <%= arroz.nombre %> </option>
                                        <% }) %>
                                      </select>
                                </td>
                                <td> 
                                  <select class="form-control col-sm-10" id="carne-<%= plato.id_plato_del_dia %>" name="carne-<%= plato.id_plato_del_dia %>">
                                      <% data.carne.forEach(function (carne) {%>
                                          <option value="<% carne.id_item %>" <% if (plato.id_carne == carne.id_item ) { %>selected<% } %> > <%= carne.nombre %> </option>
                                      <% }) %>
                                    </select>
                              </td>
                              <td> 
                                <select class="form-control col-sm-10" id="guarnicion-<%= plato.id_plato_del_dia %>" name="guarnicion-<%= plato.id_plato_del_dia %>">
                                    <% data.guarnicion.forEach(function (guarnicion) {%>
                                        <option value="<% guarnicion.id_item %>" <% if (plato.id_guarnicion == guarnicion.id_item ) { %>selected<% } %> > <%= guarnicion.nombre %> </option>
                                    <% }) %>
                                  </select>
                              </td>
                              <td> 
                                <select class="form-control col-sm-10" id="ensalada-<%= plato.id_plato_del_dia %>" name="ensalada-<%= plato.id_plato_del_dia %>">
                                    <% data.ensalada.forEach(function (ensalada) {%>
                                      <option value="<% ensalada.id %>" <% if (plato.id_ensalada == ensalada.id_item ) { %>selected<% } %> > <%= ensalada.nombre %> </option>
                                    <% }) %>
                                </select>
                              </td>
                              </tr>
                         <% }) %>
                       <% } %>
                      </tbody>
                    </table>
                    <span class="separator" ></span>
                  </div>
                  <span class="separator" ></span>
                  <button type="submit" class="btn btn-primary mr-2" style="float: right;">Guardar cambios</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/todolist.js"></script>
</body>

</html>
