<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
    <div class="container-fluid page-body-wrapper">
      <% include ../public/layouts/sidebar.ejs %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-4 grid-margin stretch-card mx-auto text-center">
              <div class="card">
                <div class="card-body">
                    <div class="form-group register-image">
                      <img src="/images/test/combo/combo1.jpg" class="register-img"/>
                      <input type="file" name="img[]" class="file-upload-default">
                      <div class="input-group">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Subir imagen">
                        <button class="file-upload-browse btn btn-primary" type="button" id="upload-button">Subir</button>
                      </div>
                    </div>
                </div>
              </div>
            </div>
            <div class="col-8 grid-margin stretch-card mx-auto">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"><%= action%> item</h4>
                  <% if (messages.error) { %>
                      <p id="result-message" style="color:red"><%- messages.error %></p>
                  <% } %>
                  <% if (messages.success) { %>
                      <p id="result-message" style="color:green"><%- messages.success %></p>
                  <% } %>
                  <% if (action === 'Registrar') {%>
                      <form class="forms-sample" method="POST" action="/item/register">
                  <% } else if (action === 'Modificar') { %>
                      <form class="forms-sample" method="POST" action="/item/edit/<%= item.id %>">
                  <% } %>
                  <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label for="id">Id</label>
                          <div class="col-sm-12 row">
                            <input type="text" name="id-item" class="form-control" id="id-item" placeholder="Id" value="<%= item.id %>" />
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="nombre">Nombre</label>
                          <div class="col-sm-12 row">
                            <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Nombre" value="<%= item.nombre %>"/>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-3">
                          <div class="form-group">
                            <label for="tipo-item">Tipo</label>
                            <select class="form-control col-sm-10" id="tipo-item" name="tipo-item">
                              <option value="Plato" <% if (item.tipo == 'Plato') { %>selected<% } %> >Plato</option>
                              <option value="Bebida" <% if (item.tipo == 'Bebida') { %>selected<% } %> >Bebida</option>
                              <option value="Guarnicion" <% if (item.tipo == 'Guarnicion') { %>selected<% } %> >Guarnicion</option>
                              <option value="Combo" <% if (item.tipo == 'Combo') { %>selected<% } %> >Combo</option>
                            </select>
                          </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label for="descripcion">Descripción</label>
                          <div class="col-sm-12 row">
                            <input type="text" name="descripcion" class="form-control" id="descripcion" placeholder="Descripcion" value="<%= item.descripcion%>">
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Precio</label>
                          <div class="input-group col-sm-12 row">
                            <div class="input-group-prepend">
                              <span class="input-group-text bg-primary text-white">DOP$</span>
                            </div>
                            <input type="number" name="precio" step="0.01" min="0" class="form-control price-int-input" value="<%= item.precio%>">
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="input-group align-items-center">
                          <button id="reg-button" type="submit" class="btn btn-primary mr-2 reg-item" ><%= action %></button>
                      <% if (action === 'Modificar') { %>
                          <button id="del-button" name="delete" type="submit" formmethod="POST" formaction="/item/delete/<%= item.id %> " class="btn btn-danger">Cancelar item</button>
                          <span class="separator" ></span>
                        <% if (!item.eliminado) { %>
                            <p id="result-message" name="eliminado" value="0" style="color:green">El item esta operativo</p>
                        <% } else { %>
                            <p id="result-message" name="eliminado" value="1" style="color:red">El item esta cancelado</p>
                        <% } %>
                      <% } %>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a
                href="https://www.templatewatch.com/" target="_blank">Templatewatch</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i
                class="ti-heart text-danger ml-1"></i></span>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/todolist.js"></script>
  <script src="/scripts/register_item.js"></script>
</body>

</html>