<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Empleados</h4>
                    <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label>Rol</label>
                            <select class="form-control col-sm-12" id="rol-cbx" name="rol-cbx" onchange="updateList()">
                              <option value="" selected>Todos</option>
                              <option value="Administrador">Administrador</option>
                              <option value="Cajero">Cajero</option>
                              <option value="Delivery">Delivery</option>
                            </select>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-group">
                          <label>Cancelado</label>
                            <select class="form-control col-sm-12" id="cancelado-cbx" name="cancelado-cbx" onchange="updateList()">
                              <option value="" selected>Todos</option>
                              <option value="Activado">Activos</option>
                              <option value="Cancelado">Cancelados</option>
                            </select>
                        </div>
                      </div>
                    </div>
                  <% if (data == '') { %>
                    <p id="result-message" style="color:red">No hay empleados registrados</p>
                  <% } %>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered" style="width: 100%">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Correo</th>
                          <th>Rol</th>
                          <th>Estado</th>
                        </tr>
                      </thead>
                      <tbody id="employee-list">
                       <% if (data) { %>
                         <% data.forEach(function (employee) { %>
                              <tr>
                                <td><%- employee.nombre %></td>
                                <td><%- employee.correo %></td>
                                <td><%- employee.rol %></td>
                                <% if (employee.activo) { %>
                                <td style="color:green">Activado</td>
                                <% } else { %>
                                <td  style="color:red">Cancelado</td>
                                <% } %>
                                <td class="image"> 
                                  <a href='/empleado/modificar/<%= employee.id_empleado %>'> <img src="/images/icons/edit.svg" /> </a>
                                </td>
                              </tr>
                         <% }) %>
                       <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/list_empleado.js"></script>
</body>

</html>
