<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
    <div class="container-fluid page-body-wrapper">
      <% include ../public/layouts/sidebar.ejs %>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Registrar empleado</h4>
                  <% if (messages.error) { %>
                      <p id="result-message" style="color:red"><%- messages.error %></p>
                  <% } %>
                  <% if (messages.success) { %>
                      <p id="result-message" style="color:green"><%- messages.success %></p>
                  <% } %>
                  <form class="forms-sample" method="POST" action="/employee/register" enctype="multipart/form-data">
                  <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label for="avatar">Avatar</label>
                          <div class="col-sm-12 row">
                            <img src="/images/ProfilePic.png" name="ProfilePic" id="ProfilePic" value = "<%= avatar %>"/>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-5">
                        <div class="input-group">
                            <input id="ProfilePicText"type="text" class="form-control file-upload-info" disabled placeholder="Image" value='' style="background-color: white"/>
                            <label for="ProfilePicSelect" class="btn btn-primary mr-2 reg-employee">
                                <input type="file" name="ProfilePicSelect" id="ProfilePicSelect" accept="image/png, image/jpeg" onchange="readURL(this),compressImage(event)"  style="display: none;">
                                 Buscar Imagen
                            </label>   
                        </div>
                      </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <div class="col-sm-12 row">
                                    <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Nombre" value="<%= nombre %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                          <div class="form-group">
                            <label for="rol">Rol</label>
                            <select class="form-control col-sm-10" id="rol" name="rol">
                              <option value="Cajero" <% if (rol == 'Cajero') { %>selected<% } %> >Cajero</option>
                              <option value="Delivery" <% if (rol == 'Delivery') { %>selected<% } %> >Delivery</option>
                          </select>
                          </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col-md-9">
                        <div class="form-group">
                          <label for="correo">Correo Electronico</label>
                          <div class="col-sm-12 row">
                            <input type="text" name="correo" class="form-control" id="correo" placeholder="Correo" value="<%= correo %>">
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-9">
                        <div class="form-group">
                          <label for="contrasena">Contraseña</label>
                          <div class="col-sm-12 row">
                              <input type="password" name="contrasena" class="form-control" id="contrasena" placeholder="Contrasena" value="<%= contrasena %>">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-9">
                          <div class="form-group">
                            <label for="contrasenaconfirmada">Repita la contraseña</label>
                            <div class="col-sm-12 row">
                                <input type="password" name="contrasenaconfirmada" class="form-control" id="contrasenaconfirmada" placeholder="Contrasena" value="<%= contrasenaconfirmada %>">
                              </div>
                            </div>
                          </div>
                        </div>
                    <button id="reg-button" type="submit" class="btn btn-primary mr-2 reg-employee" >Registrar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a
                href="https://www.templatewatch.com/" target="_blank">Templatewatch</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i
                class="ti-heart text-danger ml-1"></i></span>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <script>
    const joselito = "bqdqwndqwnd";
  
  </script>

  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/todolist.js"></script>
  <script src="/routes/employee.js"></script>
  <script>
  //TEST SCRIPT TO COMPRESS IMAGE
  async function compressImage (event) {
    var file = event.target.files[0];
    document.getElementById('ProfilePic').src = URL.createObjectURL(file);

    var options = {
      maxSizeMB: 0.5, 
      maxWidthOrHeight: 1024, 
      useWebWorker: false
    }

    const output = await imageCompression(file,options);
    const downloadLink = URL.createObjectURL(output);
      document.getElementById('ProfilePic').src = downloadLink;
      // document.getElementById('ProfilePicText').value = output.fileName;
    console.log('input', file);
    console.log('output', output);
  }
  </script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/browser-image-compression@latest/dist/browser-image-compression.js"></script>
  <script>
      function readURL(input) {
  var url = input.value;
  var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
  if (input.files && input.files[0]&& (ext == "png" || ext == "jpeg" || ext == "jpg")) {
    
      var fileName = url.split('fakepath' + String.fromCharCode(92)).pop();
      var reader = new FileReader();
  
      reader.onload = function (e) {
          // $('#ProfilePic').attr('src', e.target.result);
          $('#ProfilePicText').attr('value',fileName);
          // console.log('Pic',e.target.result);
          // console.log('Filename',fileName);
      }
      reader.readAsDataURL(input.files[0]);
  }
  else{
       $('#ProfilePic').attr('src', '/images/ProfilePic.png');
    }
  }
  </script>
</body>

</html>