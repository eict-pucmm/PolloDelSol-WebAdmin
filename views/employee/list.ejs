<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Items</h4>
                  <form>
                    <div class="row">
                      <div class="col-md-3">
                        <div class="form-group">
                          <label for="filtro-cbx">Filtrar por tipo</label>
                          <form>
                            <select class="form-control col-sm-10" id="filtro-cbx" name="filtro-empleados">
                              <option value="" selected>Todos</option>
                              <option value="Cajero">Cajero</option>
                              <option value="Delivery">Delivery</option>
                            </select>
                          </form>
                          
                        </div>
                      </div>
                    </div>
                  </form>
                  <% if (data == '') { %>
                    <p id="result-message" style="color:red">No hay empleados registrados</p>
                  <% } %>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered" style="width: 100%">
                      <thead>
                        <tr>
                          <th>
                            Avatar
                          </th>
                          <th>
                            Nombre
                          </th>
                          <th>
                            Correo
                          </th>
                          <th>
                            Rol
                          </th>
                          <th>
                            Cancelado
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                      <!--Code to fill table with employees data-->
                       <% if (data !== '' && data !== undefined) { %>
                        <input id= 'data-input'style="display: none" value="<%=data%>">
                         <% data.forEach(function (employee) { %>
                              <tr>
                                <td style="width: 10%"><img src="<%= employee.avatar %>" style="width: 100px; height: 100px; border-radius: 10%"></td>
                                <td><%= employee.nombre %></td>
                                <td><%= employee.correo %></td>
                                <td><%= employee.rol %></td>
                                <td>
                                  <div class="form-check">
                                    <label class="form-check-label">
                                      <input type="checkbox" class="form-check-input" disabled <% if (employee.eliminado) { %> checked <% } %>/>
                                    </label>
                                  </div>
                                </td>
                                <td class="image"> 
                                  <a href='/employee/edit/<%= employee.id_empleado %>'> <img src="/images/icons/edit.svg" /> </a>
                                </td>
                              </tr>
                         <% }) %>
                       <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2018 <a href="https://www.templatewatch.com/" target="_blank">Templatewatch</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ml-1"></i></span>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/todolist.js"></script>
  <script src="/scripts/list_empleado.js"></script>
</body>

</html>
