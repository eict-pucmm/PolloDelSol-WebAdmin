<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Empresas</h4>
                  <div class="row">
                    <div class="col-md-3">
                      <div class="form-group">
                        <label for="filtro-rnc">Flitrar por RNC</label>
                        <input type="text" class="form-control" id="filtro-rnc" onkeyup="filter()"/>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="form-group">
                        <label for="filtro-nombre">Flitrar por nombre</label>
                        <input type="text" class="form-control" id="filtro-nombre" onkeyup="filter()"/>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="form-group">
                        <label for="aprobada-cbx">Estado</label>
                        <select onchange="filter()" class="form-control col-sm-12" id="aprobada-cbx">
                          <option value="" selected>Todas</option>
                          <option value="Aprobada">Aprobadas</option>
                          <option value="Pendiente">Pendientes</option>
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="table-responsive pt-3">
                    <table id="empresa-table" class="table table-bordered">
                      <thead>
                        <tr>
                          <th>RNC</th>
                          <th>Nombre</th>
                          <th>Teléfono</th>
                          <th>Correo electrónico</th> 
                          <th>Cant. de empleados asociados</th>
                          <th>Estado</th>
                        </tr>
                      </thead>
                      <tbody id="empresa-list">
                        <% if (data !== '') { %>
                        <% data.forEach((empresa) => { %>
                        <tr>
                          <td><%- empresa.rnc %></td>
                          <td><%- empresa.nombre %></td>
                          <td><%- empresa.telefono %></td>
                          <td><%- empresa.correo_electronico%></td>
                          <td><%= empresa.cant_empleados%></td>
                          <% if (empresa.aprobada) {%>
                          <td id="result-message" style="color:green">Aprobada</td>
                          <% } else {%>
                          <td id="result-message" style="color:red">Pendiente</td>
                          <% }%>
                          <td class="image"> 
                            <a href='/empresa/edit/<%= empresa.id_empresa %>'> <img src="/images/icons/edit.svg" /> </a>
                          </td>
                        </tr>
                        <% }) %>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/list_empresa.js"></script>
</body>

</html>
