<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Empresas</h4>
                  <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filtro-rnc">Flitrar por RNC</label>
                            <input type="text" class="form-control" id="filtro-rnc" onkeyup="filter()"/>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filtro-nombre">Flitrar por nombre</label>
                            <input type="text" class="form-control" id="filtro-nombre" onkeyup="filter()"/>
                        </div>
                    </div>
                  </div>
                  <% if (data == '') { %>
                    <p id="result-message" style="color :red">No hay empresas con ese nombre</p>
                  <% } %>
                  <div class="table-responsive pt-3">
                    <table id="empresa-table" class="table table-bordered">
                      <thead>
                        <tr>
                          <th>RNC</th>
                          <th>Nombre</th>
                          <th>Teléfono</th>
                          <th>Correo electrónico</th> 
                          <th>Cant. de empleados asociados</th>
                          <th>Aprobada</th>
                        </tr>
                      </thead>
                      <tbody>
                       <% if (data !== '') { %>
                         <% data.forEach(function (enterprise) { %>
                              <tr>
                                <td><%- enterprise.rnc %></td>
                                <td><%- enterprise.nombre %></td>
                                <td><%- enterprise.telefono %></td>
                                <td><%- enterprise.correo_electronico%></td>
                                <td><%= enterprise.cant_empleados%></td>
                                <td>
                                  <div class="form-check">
                                    <label class="form-check-label">
                                      <input type="checkbox" class="form-check-input" disabled <% if (enterprise.aprobada) { %> checked <% } %>/>
                                    </label>
                                  </div>
                                </td>
                                <td class="image"> 
                                  <a href='/empresa/edit/<%= enterprise.id_empresa %>'> <img src="/images/icons/edit.svg" /> </a>
                                </td>
                              </tr>
                         <% }) %>
                       <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/list_empresa.js"></script>
</body>

</html>
