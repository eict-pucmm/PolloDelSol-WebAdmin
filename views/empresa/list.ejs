<!DOCTYPE html>
<html lang="en">

<% include ../public/layouts/header.ejs %>

<body>
  <div class="container-scroller">
  <% include ../public/layouts/navbar.ejs %>
  <div class="container-fluid page-body-wrapper">
    <% include ../public/layouts/sidebar.ejs %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Empresas</h4>
                  <form action="/empresa?nombre-empresa=">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group row">
                            <form class="form-group">
                              <div class="col-md-6">
                                  <label for="nombre-empresa">Buscar por nombre</label>
                                  <input type="text" class="form-control" id="nombre-empresa" name="Nombre"/>
                              </div>
                              <div class="col-md-6">
                                  <label for="rnc-empresa">Buscar por RNC</label>
                                  <input type="text" class="form-control" id="rnc-empresa" name="RNC"/>
                              </div>
                              <div class="col-lg-6">
                                  <button type="button" class="btn btn-secondary" >Buscar</button>
                              </div>
                            </form>
                        </div>
                      </div>
                    </div>
                    </form>
                  </form>
                  <% if (data == '') { %>
                    <p id="result-message" style="color :red">No hay empresas con ese nombre</p>
                  <% } %>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Nombre</th>
                          <th>RNC</th>
                          <th>Periodo de cierre</th>
                          <th>Próximo día de cierre</th>
                          <th>Aprobada</th>
                        </tr>
                      </thead>
                      <tbody>
                       <% if (data !== '') { %>
                         <% data.forEach(function (enterprise) { %>
                              <tr>
                                <td><%= enterprise.id_empresa %></td>
                                <td><%= enterprise.nombre %></td>
                                <td><%= enterprise.RNC %></td>
                                <!--<td><%= enterprise.tipo_de_cierre %></td>-->
                                <% if (enterprise.tipo_de_cierre == 1){ %>
                                  <td>Semanal</td>
                                <% } else if (enterprise.tipo_de_cierre == 2) { %>
                                  <td>Quincenal</td>
                                <% } else if (enterprise.tipo_de_cierre == 3) { %>
                                  <td>Mensual</td>
                                <% } %>
                                <td><%= enterprise.dia_cierre %></td>
                                <td>
                                  <div class="form-check">
                                    <label class="form-check-label">
                                      <input type="checkbox" class="form-check-input" disabled <% if (enterprise.registrada) { %> checked <% } %>/>
                                    </label>
                                  </div>
                                </td>
                                <td class="image"> 
                                  <a href='/empresa/edit/<%= enterprise.id_empresa %>'> <img src="/images/icons/edit.svg" /> </a>
                                </td>
                              </tr>
                         <% }) %>
                       <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.templatewatch.com/" target="_blank">Templatewatch</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ml-1"></i></span>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <script src="/vendors/base/vendor.bundle.base.js"></script>
  <script src="/scripts/off-canvas.js"></script>
  <script src="/scripts/hoverable-collapse.js"></script>
  <script src="/scripts/template.js"></script>
  <script src="/scripts/todolist.js"></script>
</body>

</html>
